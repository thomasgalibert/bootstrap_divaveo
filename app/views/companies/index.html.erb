<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Street</th>
      <th>Zipcode</th>
      <th>Town</th>
      <th>Country</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Fax</th>
      <th>Iban</th>
      <th>Bic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.number %></td>
        <td><%= company.street %></td>
        <td><%= company.zipcode %></td>
        <td><%= company.town %></td>
        <td><%= company.country %></td>
        <td><%= company.email %></td>
        <td><%= company.tel %></td>
        <td><%= company.fax %></td>
        <td><%= company.iban %></td>
        <td><%= company.bic %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

